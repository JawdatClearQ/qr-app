model VCard {
  id            String    @id @default(cuid())
  firstName     String
  lastName      String
  tag           String
  customerEmail String?
  phone         String?
  company       String?
  title         String?
  logoType      String?   @db.VarChar(4000)
  image         String?   @db.VarChar(4000)
  linkedIn      String?
  x             String?
  facebook      String?
  instagram     String?
  snapchat      String?
  tiktok        String?
  url           String?
  customer      Customer? @relation(fields: [customerId], references: [id])
  customerId    String
}

model Qr {
  id         String    @id @default(cuid())
  url        String
  tag        String
  customer   Customer? @relation(fields: [customerId], references: [id])
  logoType   String?
  customerId String
}