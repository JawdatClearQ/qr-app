generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String   @id @default(cuid())
  email     String   @unique
  firstName String
  lastName  String
  phone     String?
  password  String
  company   String?
  image     String?  @db.VarChar(4000)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  vcard     VCard[]
  qr        Qr[]
}

